<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner_container"
    tools:context=".BiometricRegistrationController">

    <LinearLayout
        android:id="@+id/pnlTopMainPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:background="@color/backgroundColor"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/pnlBottomControlPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pnlScannerArea"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
               >

                <ImageView
                    android:id="@+id/imgScanStream"
                    android:layout_width="283dp"
                    android:layout_height="283dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:progress="75"
                    android:progressTint="@color/control_color"
                    android:thumbTint="@color/control_color"
                    android:tooltipText="75%"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgScanStream" />
            </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pnlSelectedModalityArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="70"
            >

            <LinearLayout
                android:id="@+id/pnlCurrentModalityViewArea"
                android:layout_width="match_parent"
                android:layout_height="273dp"
                android:orientation="vertical"
                android:background="@color/backgroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:weightSum="2">

                <TextView
                    android:id="@+id/lblCurrentModality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/fourLeftFingers"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pnlIrisModality"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/irisLeft"
                        android:layout_width="173dp"
                        android:layout_height="173dp"
                        android:onClick="irisExceptionImageClick"
                        android:background="@drawable/iris"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:id="@+id/irisRight"
                        android:layout_width="173dp"
                        android:layout_height="173dp"
                        android:onClick="irisExceptionImageClick"
                        android:background="@drawable/iris_exception"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pnlLeftFourFinger"
                    android:orientation="vertical"
                    android:visibility="gone"
                  >

                        <ImageView
                            android:id="@+id/leftFourFinger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/left_hand"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            />


                </LinearLayout>





<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:id="@+id/pnlLeftFourFingerOption2SeparteImages2"-->
<!--                    android:orientation="horizontal"-->
<!--                    android:visibility="visible"-->
<!--                    >-->

<!--                    <ImageView-->
<!--                        android:layout_width="30dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:background="@drawable/ic_left1"-->
<!--                        android:adjustViewBounds="true"-->
<!--                        android:scaleType="centerCrop"-->
<!--                        />-->
<!--                    <ImageView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:background="@drawable/ic_left2"-->
<!--                        android:adjustViewBounds="true"-->
<!--                        android:scaleType="fitXY"-->
<!--                        />-->



<!--                </LinearLayout>-->



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pnlRightFourFinger"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:weightSum="1"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >

                        <ImageView
                            android:id="@+id/rightFourFinger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"

                            android:background="@drawable/right_hand"
                            android:onClick="fingerExceptionClick" />
                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:onClick="fingerExceptionClick"
                            android:background="@drawable/circle_button"/>
                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="63dp"
                            android:layout_marginTop="13dp"
                            android:onClick="fingerExceptionClick"
                            android:background="@drawable/circle_button"/>


                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="103dp"
                            android:layout_marginTop="25dp"
                            android:onClick="fingerExceptionClick"
                            android:background="@drawable/circle_button"/>

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="133dp"
                            android:layout_marginTop="55dp"
                            android:onClick="fingerExceptionClick"
                            android:background="@drawable/circle_button" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:id="@+id/pnlTwoThumbsFinger"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:id="@+id/twoThumbs"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/right_hand" />

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"

                            android:background="@drawable/circle_button">


                        </ImageView>
                    </RelativeLayout>


                </LinearLayout>










                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pnlFacePhoto"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/facePhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/photo_capture"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pnlExceptionPhoto"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/exceptionPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/exception_photo"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/pnlModalityCommandsPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pnlCurrentModalityViewArea"

                android:layout_marginLeft="24dp"
                >
                <Button
                    android:id="@+id/btnPreviousModality"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:layout_marginHorizontal="8dp"
                    app:cornerRadius="45dp"
                    android:onClick="prevButtonClick"
                    android:text="@string/previous" />

                <Button
                    android:id="@+id/btnNextModality"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cornerRadius="45dp"
                    android:onClick="nextButtonClick"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/next" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnScan"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        app:cornerRadius="100dp"
        android:paddingLeft="24dp"
        app:icon="@drawable/scan"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/pnlBottomControlPanel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="3"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/ptnIrisScanSelection"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:paddingLeft="8dp"
                android:backgroundTint="@color/control_color"
                app:cornerRadius="48dp"
                android:onClick="irisButtonClick"
                app:icon="@drawable/outline_remove_red_eye_white_24" />

        <Button
            android:id="@+id/btnFingerScanSelection"
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:paddingLeft="8dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/control_color"
            app:cornerRadius="48dp"
            android:onClick="fingerButtonClick"
            app:icon="@drawable/fingerprint"  />

        <Button
            android:id="@+id/btnFaceScanSelection"
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:paddingLeft="7dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/control_color"
            app:cornerRadius="48dp"
            android:onClick="facePhotoButtonClick"
            app:icon="@drawable/outline_portrait_24" />
            <Button
                android:id="@+id/btnException"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/errorColor"
                android:paddingLeft="7dp"
                android:visibility="visible"
                android:layout_marginLeft="16dp"
                app:cornerRadius="48dp"
                android:onClick="exceptionPhotoButtonClick"
                app:icon="@drawable/outline_portrait_24" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        >

    </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>