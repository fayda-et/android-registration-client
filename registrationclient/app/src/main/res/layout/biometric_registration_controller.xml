<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner_container"
    tools:context=".BiometricRegistrationController">

    <LinearLayout
        android:id="@+id/pnlTopMainPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:background="@color/backgroundColor"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/pnlBottomControlPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pnlScannerArea"
                android:background="@color/primaryColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
               >

                <ImageView
                    android:id="@+id/imgScanStream"
                    android:layout_width="283dp"
                    android:layout_height="283dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="45dp"
                    android:progress="75"
                    android:progressTint="@color/control_color"
                    android:thumbTint="@color/control_color"
                    android:tooltipText="75%"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgScanStream" />
            </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pnlSelectedModalityArea"
            android:background="@color/secondaryColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="70"
            >

            <LinearLayout
                android:id="@+id/pnlCurrentModalityViewArea"
                android:layout_width="match_parent"
                android:layout_height="273dp"
                android:orientation="horizontal"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imgSelectedModality"
                    android:layout_width="73dp"
                    android:layout_height="173dp"
                    android:background="@color/primaryDarkColor"
                    android:layout_weight="50"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/pnlModalityCommandsPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/control_color"

                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pnlCurrentModalityViewArea">

                <Button
                    android:id="@+id/btnPreviousModality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/previous" />

                <Button
                    android:id="@+id/btnNextModality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/next" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnScan"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:text="@string/scan"

        android:background="@drawable/fingerprint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <LinearLayout
        android:id="@+id/pnlBottomControlPanel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="3"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
        <Button
            android:id="@+id/ptnIrisScanSelection"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Iris" />

        <Button
            android:id="@+id/btnFingerScanSelection"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/finger" />

        <Button
            android:id="@+id/btnFaceScanSelection"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/face" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        >

    </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>