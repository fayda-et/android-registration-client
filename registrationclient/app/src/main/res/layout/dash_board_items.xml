    <TextView
        android:id="@+id/textViewRegistrationApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:fontFamily="sans-serif"
        android:text="Demographic and biometric enrollment"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutRegistration"
        android:layout_width="1000dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewRegistrationApp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewRegistration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageRegistration"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_new_registration"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textViewRegistration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="@string/registration"
                    android:textSize="@dimen/_20ssp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textSubtitleReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewRegistration"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="40dp"
                    android:text="@string/sub_for_registration"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewSync"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageSync"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_sync"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="@string/system_sync"
                    android:textSize="@dimen/_20ssp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textSubtitleSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textSync"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="40dp"
                    android:text="@string/sub_sync"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutmiddle"
        android:layout_width="1000dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutRegistration">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewUpload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageUpload"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_upload"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textViewUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="@string/upload"
                    android:textSize="@dimen/_20ssp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textSubtitleUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewUpload"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="40dp"
                    android:text="@string/sub_upload"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewCenterRap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageRemap"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_remap"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textViewRemap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="@string/center_remap"
                    android:textSize="@dimen/_20ssp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textSubtitleRemap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewRemap"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="40dp"
                    android:text="@string/sub_approval"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBottom"
        android:layout_width="1000dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutmiddle">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewOperatorsBiometrics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageOperatorsBiometrics"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_finger_print"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textOperatorsBiometrics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="@string/operators_biometric"
                    android:textSize="@dimen/_20ssp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textSubtitleOperatorsBiometrics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textOperatorsBiometrics"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="40dp"
                    android:text="@string/sub_operators"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewApproval"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageApproval"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_pending_approval"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textViewApproval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="@string/pending_approval"
                    android:textSize="@dimen/_20ssp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textSubtitleApproval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewApproval"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="40dp"
                    android:text="@string/sub_approval"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
